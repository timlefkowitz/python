cel = 0
fahr = float(temp)
cel = (fahr - 32.0) * 5.0 / 9.0
print(cel) 

#Which line/lines should be surrounded by try block? 3,4

# try. if the try doesn't work it will run the except
astr = 'Hello Bob'
try:
    istr = int(astr)
except:
    istr = -1

print('First', istr)

astr = '123'
try:
    istr = int(astr)
except:
    istr = -1
print('Second', istr)        

# be careful to not put to much in the try 

astr = 'bob'
try:
    print('hello')
    istr = int(astr)
    print('There')
except:
    istr = -1 
print('Done', istr)

# Sample try / expect

rawstr = input('Enter a number:')
try:
    ival = int(rawstr)
except:
    ival = -1
if ival > 0 :
    print('Nice work')
else:
    print('not a number')    

# Stored (and reused) Steps
